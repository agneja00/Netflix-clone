{
  "name": "netflixclone-root",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "cd NetflixClone && yarn dev",
    "build": "cd NetflixClone && yarn build",
    "test": "cd NetflixClone && yarn test",
    "lint": "cd NetflixClone && yarn lint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4"
  },
  "workspaces": ["NetflixClone"],
  "lint-staged": {
    "*.{js,ts,tsx,json,css,scss,md,yml,yaml}": [
      "yarn lint:fix",
      "yarn format:fix"
    ]
  }
}
